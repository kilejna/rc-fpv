{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"rootDir": "./src",
		"moduleResolution": "NodeNext",
		"baseUrl": "./",
		"paths": {
			"@*": ["./src/*"],
			"@types": ["../types/types.d.ts", "../node_modules/@types", "../client/node_modules/@types"]
		},
		"typeRoots": ["./node_modules/@types", "../node_modules/@types", "../types", "../client/node_modules/@types"],
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
