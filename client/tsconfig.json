{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"rootDir": "./src",
		"baseUrl": "./",
		"paths": {
			"@*": ["./src/*"],
			"@types": ["../types/types.d.ts", "../node_modules/@types", "../server/node_modules/@types"]
		},
		"typeRoots": ["./node_modules/@types", "../node_modules/@types", "../types", "../server/node_modules/@types"],
		"allowJs": true,
		"outDir": "./dist",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"alwaysStrict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
